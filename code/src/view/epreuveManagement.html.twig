{% extends 'template.html.twig' %}

{% block title %}
    Home
{% endblock %}

{% block content %}
    <div class="display">
        <div class="btn-ctl">create new event</div>
        <div class="btn-ctl">List event</div>
        <br>
        <br>
        <div class="container">
            <div class="row">
                <div><a href="/participant/new">ajout d'un participant</a></div>
                <div class="col-12">
                    <table class="table">
                        <thead class="thead-dark">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Photo</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prenom</th>

                            <th scope="col">date de naissance</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for Dap in pList %}
                            <tr>
                                <th scope="row">
                                    <a href="/participant/id={{ Dap.id }}">{{ Dap.id }}</a>
                                </th>
                                <td>{{ Dap.photo }}</td>
                                <td>{{ Dap.nom }}</td>
                                <td>{{ Dap.prenom }}</td>
                                <td>{{ Dap.date_de_naissance }}</td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
